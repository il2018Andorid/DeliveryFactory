<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.delivery.factory.deliveryfactory.VendorProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/img_profile"
                    android:background="@color/md_grey_500"/>

                <com.delivery.factory.deliveryfactory.customviews.UserTextView
                    android:tag="100"
                    android:id="@+id/tv_forgotPassword"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|left"
                    android:gravity="bottom|left"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:paddingStart="16dp"
                    android:text="Upload Business Logo" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_fullname"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_avtar"
                    android:drawablePadding="16dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="Full Name"
                    android:textSize="21sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_address"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_address"
                    android:drawablePadding="16dp"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="Address"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="21sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_city"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_city"
                    android:drawablePadding="16dp"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="City"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="21sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_state"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_state"
                    android:drawablePadding="16dp"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="State"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="21sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_country"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_country"
                    android:drawablePadding="16dp"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="Country"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="21sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_emailid"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="16dp"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="Email id"
                    android:textSize="21sp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_currentpassword"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.delivery.factory.deliveryfactory.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_currentpassword"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="16dp"
                    android:background="@drawable/rounded_corner_bordergrey"
                    android:hint="Current Password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="21sp"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TIL_newpassword"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.delivery.factory.deliveryfactory.customviews.UserEditText
                android:tag="100"
                android:id="@+id/et_newpassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:background="@drawable/rounded_corner_bordergrey"
                android:hint="New Password"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="21sp"
                android:padding="10dp"
                android:layout_margin="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TIL_cnfpassword"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.delivery.factory.deliveryfactory.customviews.UserEditText
                android:tag="100"
                android:id="@+id/et_cnfpassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:background="@drawable/rounded_corner_bordergrey"
                android:hint="Confirm Password"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="21sp"
                android:padding="10dp"
                android:layout_margin="10dp"/>

        </android.support.design.widget.TextInputLayout>







        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textSize="21sp"
            android:layout_margin="10dp"/>

    </LinearLayout>


</ScrollView>
